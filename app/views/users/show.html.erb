<section class="user">
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
  <br>
  <% if current_user?(@user) %>
    <div class="action">
      <%= link_to "Edit account", edit_user_path(@user), class: "btn btn-primary" %>
      <%= link_to "Delete account", @user, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  <% end %>
  <% if @registrations.present? %>
    <h3>Registrations</h3>
    <% @registrations.each do |r| %>
      <div class="registrations">
        <div class="image">
          <%= link_to image_tag(r.event.image_file_name), r.event %>
        </div>
        <div class="name">
          <%= link_to r.event.name, r.event %>
        </div>
        <div class="date">
          <%= time_ago_in_words(r.created_at) %> ago
        </div>
      </div>
    <% end %>
  <% end %>
</section>
